<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fdhasna21.multimedia.Activity1"
    android:orientation="vertical"
    android:layout_margin="@dimen/layoutPadding">

    <ImageView
        android:id="@+id/activity1_apple"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:srcCompat="@mipmap/fruit_apple"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/activity_orange"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:srcCompat="@mipmap/fruit_orange"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>

</LinearLayout>