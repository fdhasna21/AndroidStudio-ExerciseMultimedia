<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fdhasna21.multimedia.Activity5"
    android:orientation="vertical"
    android:layout_margin="@dimen/layoutPadding">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/activity3_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_image"
            android:background="@drawable/bg_drawable_corner" />

        <ImageButton
            android:id="@+id/activity5_play_button"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@drawable/ic_play"
            android:layout_gravity="center"
            android:background="@drawable/bg_drawable_fill"
            app:tint="@color/white"
            android:scaleType="centerCrop"
            />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/viewPadding">
        <SeekBar
            android:id="@+id/activity5_current_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumbTint="?attr/colorOnPrimary"/>

        <TextView
            android:id="@+id/activity5_song_position_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity5_current_position"
            android:layout_alignParentStart="true"
            android:text="0:00"
            style="?attr/textAppearanceSubtitle2"
            android:textColor="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/activity5_song_duration_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity5_current_position"
            android:layout_alignParentEnd="true"
            android:text="0:00"
            style="?attr/textAppearanceSubtitle2"
            android:textColor="?attr/colorPrimary"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/viewPadding">

    </RelativeLayout>
</LinearLayout>