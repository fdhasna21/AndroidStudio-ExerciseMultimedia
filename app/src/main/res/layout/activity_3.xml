<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fdhasna21.multimedia.Activity3"
    android:orientation="vertical"
    android:layout_margin="@dimen/layoutPadding">

    <ImageView
        android:id="@+id/activity3_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_image"
        android:background="@drawable/bg_drawable_corner"/>

    <Button
        android:id="@+id/activity3_button"
        android:text="select image"
        style="@style/AppTextAppearance.Button"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>